<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>


    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            android:layout_width="170dp"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="24dp" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:cardElevation="4dp" app:strokeWidth="2dp"
            app:cardBackgroundColor="#00FFFFFF">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="gravity" android:background="#FFFFFF">
            <TextView
                    android:text="карточек"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:background="#3303A9F4"
                    android:paddingTop="45dp" android:paddingStart="5dp"
                    android:paddingEnd="5dp" android:paddingBottom="2dp" android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"/>
            <TextView
                    android:text="последнее повторение"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    android:background="#3303A9F4"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:paddingTop="64dp" android:paddingStart="2dp" android:paddingBottom="2dp"
                    android:textSize="14sp" app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="повторений"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:paddingBottom="2dp"
                    android:paddingTop="45dp" android:textSize="14sp" android:background="#3303A9F4"
                    android:paddingStart="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4" android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="2dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/day_passed_2"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp" android:layout_marginEnd="2dp"
                    android:textSize="22sp" android:fontFamily="@font/monoton"
                    android:textColor="#000000" app:layout_constraintStart_toStartOf="@+id/textView6"
                    android:layout_marginStart="2dp"/>
            <TextView
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:fontFamily="@font/monoton"
                    android:textColor="@android:color/black"
                    android:id="@+id/cards_amount_2"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintEnd_toStartOf="@+id/textView8" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:fontFamily="@font/monoton" android:textColor="@android:color/black"
                    android:id="@+id/amount_repeat_2"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
            <CheckBox
                    android:text="повторить"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/checkBox"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="2dp"
                    app:layout_constraintEnd_toEndOf="parent" android:background="#33958F8F"
                    style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
                    android:textDirection="firstStrongRtl" app:layout_constraintStart_toStartOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>