<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>
        <androidx.cardview.widget.CardView

                android:layout_width="170dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardCornerRadius="24dp" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                app:cardElevation="4dp" android:background="@drawable/card_style">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity">
                <TextView
                        android:text="324\nдня назад"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/day_passed"
                        android:paddingStart="8dp" android:textSize="24sp"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="@+id/cards_amount"
                        app:layout_constraintEnd_toEndOf="@+id/amount_repeat" android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:background="@drawable/text_style2" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintVertical_bias="0.0"/>
                <TextView
                        android:text="последнее повторение:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cards_amount" android:layout_marginTop="8dp"/>
                <TextView
                        android:text="карточек"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:text="повторений"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView3"
                        app:layout_constraintTop_toTopOf="@+id/textView2"
                        app:layout_constraintBottom_toBottomOf="@+id/textView2"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="300"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/cards_amount"
                        android:background="@drawable/text_style"
                        app:layout_constraintStart_toStartOf="@+id/textView2"
                        app:layout_constraintEnd_toEndOf="@+id/textView2" android:textSize="24sp"
                        android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="5dp"/>
                <TextView
                        android:text="324"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/amount_repeat"
                        android:background="@drawable/text_style3"
                        app:layout_constraintStart_toStartOf="@+id/textView3"
                        app:layout_constraintEnd_toEndOf="@+id/textView3" android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="5dp"
                        android:textSize="24sp"/>
                <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mark_progress"
                        app:layout_constraintTop_toBottomOf="@+id/day_passed"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="@+id/day_passed"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
</layout>